// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

// Looking for ways to speed up your queries, or scale easily with your serverless or edge functions?
// Try Prisma Accelerate: https://pris.ly/cli/accelerate-init

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x", "windows"]
  output        = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserStatus {
  ACTIVE
  INACTIVE
}

model User {
  id        String     @id @default(uuid()) @db.Uuid
  code      Int        @unique @default(autoincrement())
  status    UserStatus @default(ACTIVE)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  identity      Identity       @relation(fields: [identityId], references: [id])
  identityId    String         @unique @db.Uuid
  refreshTokens RefreshToken[]
  accounts      Account[]

  roleAssignments   RoleAssignment[]
  transactions      Transaction[]
  isDeleted         Boolean            @default(false) @map("is_deleted")
  deletedAt         DateTime?          @map("deleted_at")
  deletedBy         String?            @map("deleted_by") @db.Uuid
  loans             Loan[]
  devices           Device[]
  messageRecipients MessageRecipient[]
  loanRequests      LoanRequest[]

  @@index([isDeleted], map: "user_is_deleted_idx")
}

model Role {
  id          String  @id @default(uuid()) @db.Uuid
  code        Int     @unique @default(autoincrement())
  key         String  @unique @db.Text
  name        String  @db.Text
  description String? @db.Text

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Back-relation: users assigned to this role via RoleAssignment
  roleAssignments RoleAssignment[]
  isDeleted       Boolean          @default(false) @map("is_deleted")
  deletedAt       DateTime?        @map("deleted_at")
  deletedBy       String?          @map("deleted_by") @db.Uuid
  rolePermissions RolePermission[]

  @@index([isDeleted], map: "role_is_deleted_idx")
  @@map("role")
}

model Permission {
  id          String  @id @default(uuid()) @db.Uuid
  code        Int     @unique @default(autoincrement())
  key         String  @unique @db.Text
  name        String  @db.Text
  description String? @db.Text

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  isDeleted        Boolean           @default(false) @map("is_deleted")
  deletedAt        DateTime?         @map("deleted_at")
  deletedBy        String?           @map("deleted_by") @db.Uuid
  rolePermissions  RolePermission[]
  permissionGrants PermissionGrant[]

  @@index([isDeleted], map: "permission_is_deleted_idx")
  @@map("permission")
}

// Bridge table for Role <-> Permission (explicit RBAC mapping)
model RolePermission {
  id           String @id @default(uuid()) @db.Uuid
  roleId       String @db.Uuid
  permissionId String @db.Uuid

  role       Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([roleId, permissionId])
}

enum RoleAssignmentStatus {
  ACTIVE
  INACTIVE
}

model RoleAssignment {
  id         String               @id @default(uuid()) @db.Uuid
  userId     String               @map("user_id") @db.Uuid
  roleId     String               @map("role_id") @db.Uuid
  assignedBy String?              @map("assigned_by")
  status     RoleAssignmentStatus @default(ACTIVE) @map("is_active")
  expiresAt  DateTime?            @map("expires_at")
  createdAt  DateTime             @default(now()) @map("created_at")
  updatedAt  DateTime             @updatedAt @map("updated_at")

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  role      Role      @relation(fields: [roleId], references: [id], onDelete: Cascade)
  isDeleted Boolean   @default(false) @map("is_deleted")
  deletedAt DateTime? @map("deleted_at")
  deletedBy String?   @map("deleted_by") @db.Uuid

  @@index([isDeleted], map: "role_assignment_is_deleted_idx")
}

enum GranteeType {
  USER
  ROLE
}

model PermissionGrant {
  id           String      @id @default(uuid()) @db.Uuid
  granteeType  GranteeType
  granteeId    String // references User.id or Role.id (no FK constraint)
  permissionId String      @db.Uuid
  permission   Permission  @relation(fields: [permissionId], references: [id], onDelete: Cascade)
  grantedBy    String?     @db.Uuid
  isGranted    Boolean     @default(true)
  reason       String?
  expiresAt    DateTime?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  isDeleted Boolean   @default(false) @map("is_deleted")
  deletedAt DateTime? @map("deleted_at")
  deletedBy String?   @map("deleted_by") @db.Uuid

  @@index([isDeleted], map: "permission_grant_is_deleted_idx")
  @@map("permission_grant")
}

model Identity {
  id          String    @id @default(uuid()) @db.Uuid
  phone       String    @unique @db.Text
  email       String?   @unique @db.Text
  name        String?   @map("name") @db.Text
  countryCode String?   @map("country_code") @db.Text
  lastLoginAt DateTime? @map("last_login_at")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  user User?

  isDeleted Boolean   @default(false) @map("is_deleted")
  deletedAt DateTime? @map("deleted_at")
  deletedBy String?   @map("deleted_by") @db.Uuid

  @@index([isDeleted], map: "identity_is_deleted_idx")
  @@map("identity")
}

model RefreshToken {
  id                String    @id @default(uuid()) @db.Uuid
  userId            String    @map("user_id") @db.Uuid
  tokenHash         String    @map("token_hash") @db.Text
  revoked           Boolean   @default(false)
  expiresAt         DateTime  @map("expires_at")
  createdAt         DateTime  @default(now()) @map("created_at")
  revokedAt         DateTime? @map("revoked_at")
  replacedByTokenId String?   @map("replaced_by_token_id") @db.Uuid
  userAgent         String?   @map("user_agent") @db.Text
  ipAddress         String?   @map("ip_address") @db.Text

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  isDeleted Boolean   @default(false) @map("is_deleted")
  deletedAt DateTime? @map("deleted_at")
  deletedBy String?   @map("deleted_by") @db.Uuid

  @@unique([userId, tokenHash], map: "refresh_token_user_hash_unique")
  @@index([isDeleted], map: "refresh_token_is_deleted_idx")
  @@index([userId], map: "refresh_token_user_idx")
  @@map("refresh_token")
}

// Devices / sessions recorded per user (for session management and revocation)
model Device {
  id         String   @id @default(uuid()) @db.Uuid
  userId     String   @db.Uuid
  deviceId   String   @db.Text
  deviceName String?  @db.Text
  ip         String?  @db.Text
  userAgent  String?  @db.Text
  lastSeen   DateTime @default(now())
  createdAt  DateTime @default(now())
  revoked    Boolean  @default(false)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// Audit log for recording changes and important actions
model AuditLog {
  id        String   @id @default(uuid()) @db.Uuid
  actorId   String?  @db.Uuid
  model     String   @db.Text
  recordId  String   @db.Text
  action    String   @db.Text
  changes   Json?
  ip        String?  @db.Text
  userAgent String?  @db.Text
  createdAt DateTime @default(now())

  @@index([actorId])
  @@index([model, recordId])
}

model SmsCode {
  id          String    @id @default(uuid()) @db.Uuid
  phone       String    @db.Text
  code        String    @db.Text
  purpose     String    @db.Text
  attempts    Int       @default(0)
  maxAttempts Int       @default(5) @map("max_attempts")
  expiresAt   DateTime  @map("expires_at")
  consumedAt  DateTime? @map("consumed_at")
  createdAt   DateTime  @default(now()) @map("created_at")

  isDeleted Boolean   @default(false) @map("is_deleted")
  deletedAt DateTime? @map("deleted_at")
  deletedBy String?   @map("deleted_by") @db.Uuid

  @@index([isDeleted], map: "sms_code_is_deleted_idx")
  @@index([phone], map: "sms_code_phone_idx")
  @@index([phone, code], map: "sms_code_phone_code_idx")
  @@map("sms_code")
}

model AccountType {
  id          String    @id @default(uuid()) @db.Uuid
  code        Int       @unique @default(autoincrement())
  name        String    @unique
  maxAccounts Int?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  accounts    Account[]

  isDeleted Boolean   @default(false) @map("is_deleted")
  deletedAt DateTime? @map("deleted_at")
  deletedBy String?   @map("deleted_by") @db.Uuid

  @@index([isDeleted], map: "account_type_is_deleted_idx")
}

enum AccountStatus {
  ACTIVE
  INACTIVE
  BUSY
}

model Account {
  id            String      @id @default(uuid()) @db.Uuid
  code          Int         @unique @default(autoincrement())
  accountTypeId String      @db.Uuid
  accountType   AccountType @relation(fields: [accountTypeId], references: [id])

  name   String
  userId String @db.Uuid
  user   User   @relation(fields: [userId], references: [id])

  cardNumber String        @unique
  bankName   String
  status     AccountStatus @default(ACTIVE)
  bookCode   String

  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  // Back-relation: bank using this account
  bank            Bank?
  loans           Loan[]
  SubscriptionFee SubscriptionFee[]
  journalEntries  JournalEntry[]
  loanRequests    LoanRequest[]
  isDeleted       Boolean           @default(false) @map("is_deleted")
  deletedAt       DateTime?         @map("deleted_at")
  deletedBy       String?           @map("deleted_by") @db.Uuid
  ownerId         String?           @map("owner_id") @db.Uuid
  createdBy       String?           @map("created_by") @db.Uuid

  @@index([isDeleted], map: "account_is_deleted_idx")
  @@index([ownerId], map: "account_owner_id_idx")
  @@index([createdBy], map: "account_created_by_idx")
}

/// Singleton bank configuration for the platform (exactly one row expected with id = 1)
model Bank {
  id                     String  @id @default(uuid()) @db.Uuid
  name                   String
  subscriptionFee        Decimal @db.Decimal(18, 4)
  commissionPercentage   Decimal @default(10) @db.Decimal(5, 2)
  defaultMaxInstallments Int     @default(10)

  installmentOptions Int[]  @default(dbgenerated("ARRAY[5,10,12]"))
  status             String @default("active")
  currency           String @default("Toman")
  timeZone           String @default("Asia/Tehran")

  accountId String?  @unique @db.Uuid
  account   Account? @relation(fields: [accountId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  isDeleted Boolean   @default(false) @map("is_deleted")
  deletedAt DateTime? @map("deleted_at")
  deletedBy String?   @map("deleted_by") @db.Uuid

  @@index([isDeleted], map: "bank_is_deleted_idx")
  @@map("bank")
}

model LoanType {
  id                   String  @id @default(uuid()) @db.Uuid
  name                 String  @unique
  code                 Int     @unique @default(autoincrement())
  commissionPercentage Int     @default(1)
  defaultInstallments  Int     @default(10)
  maxInstallments      Int     @default(20)
  minInstallments      Int     @default(5)
  creditRequirementPct Int     @default(20)
  description          String?

  loans        Loan[]
  loanRequests LoanRequest[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  isDeleted Boolean   @default(false) @map("is_deleted")
  deletedAt DateTime? @map("deleted_at")
  deletedBy String?   @map("deleted_by") @db.Uuid

  @@index([isDeleted], map: "loan_type_is_deleted_idx")
}

enum LoanStatus {
  PENDING // created, awaiting approval
  APPROVED // approved but not yet disbursed
  ACTIVE // disbursed, being repaid
  PAID // fully repaid
}

enum LoanRequestStatus {
  PENDING
  APPROVED
  REJECTED
  CONVERTED
}

model Loan {
  id   String @id @default(uuid()) @db.Uuid
  code Int    @unique @default(autoincrement())
  name String

  accountId String  @db.Uuid
  account   Account @relation(fields: [accountId], references: [id])

  loanTypeId String   @db.Uuid
  loanType   LoanType @relation(fields: [loanTypeId], references: [id])

  userId String @db.Uuid
  user   User   @relation(fields: [userId], references: [id])

  amount Decimal @db.Decimal(18, 4)

  startDate     DateTime
  paymentMonths Int
  status        LoanStatus @default(PENDING)

  installments Installment[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  isDeleted    Boolean       @default(false) @map("is_deleted")
  deletedAt    DateTime?     @map("deleted_at")
  deletedBy    String?       @map("deleted_by") @db.Uuid
  ownerId      String?       @map("owner_id") @db.Uuid
  createdBy    String?       @map("created_by") @db.Uuid

  @@index([isDeleted], map: "loan_is_deleted_idx")
  @@index([ownerId], map: "loan_owner_id_idx")
  @@index([createdBy], map: "loan_created_by_idx")
}

enum InstallmentStatus {
  PENDING
  ACTIVE
  PAID
  ALLOCATED
}

model Installment {
  id                String            @id @default(uuid()) @db.Uuid
  code              Int               @unique @default(autoincrement())
  loanId            String            @db.Uuid
  amount            Decimal           @db.Decimal(18, 4)
  installmentNumber Int
  dueDate           DateTime
  status            InstallmentStatus @default(PENDING)
  paymentDate       DateTime?
  journalEntryId    String?           @db.Uuid

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  loan         Loan          @relation(fields: [loanId], references: [id])
  journalEntry JournalEntry? @relation(fields: [journalEntryId], references: [id])
  isDeleted    Boolean       @default(false) @map("is_deleted")
  deletedAt    DateTime?     @map("deleted_at")
  deletedBy    String?       @map("deleted_by") @db.Uuid

  ownerId   String? @map("owner_id") @db.Uuid
  createdBy String? @map("created_by") @db.Uuid

  @@unique([loanId, installmentNumber])
  @@index([isDeleted], map: "installment_is_deleted_idx")
  @@index([ownerId], map: "installment_owner_id_idx")
  @@index([createdBy], map: "installment_created_by_idx")
}

model LoanRequest {
  id            String            @id @default(uuid()) @db.Uuid
  code          Int               @unique @default(autoincrement())
  accountId     String            @db.Uuid
  loanTypeId    String            @db.Uuid
  userId        String            @db.Uuid
  amount        Decimal           @db.Decimal(18, 4)
  startDate     DateTime
  paymentMonths Int
  status        LoanRequestStatus @default(PENDING)
  note          String?           @db.Text
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  isDeleted     Boolean           @default(false) @map("is_deleted")
  deletedAt     DateTime?         @map("deleted_at")
  deletedBy     String?           @map("deleted_by") @db.Uuid
  ownerId       String?           @map("owner_id") @db.Uuid
  createdBy     String?           @map("created_by") @db.Uuid

  account  Account  @relation(fields: [accountId], references: [id])
  loanType LoanType @relation(fields: [loanTypeId], references: [id])
  user     User     @relation(fields: [userId], references: [id])

  @@index([isDeleted], map: "loan_request_is_deleted_idx")
  @@index([status], map: "loan_request_status_idx")
  @@index([ownerId], map: "loan_request_owner_id_idx")
  @@index([createdBy], map: "loan_request_created_by_idx")
  @@map("loan_request")
}

enum SubscriptionFeeStatus {
  DUE
  PAID
  ALLOCATED
}

model SubscriptionFee {
  id             String                @id @default(uuid()) @db.Uuid
  code           Int                   @unique @default(autoincrement())
  journalEntryId String?               @db.Uuid
  accountId      String                @db.Uuid
  periodStart    DateTime
  amount         Decimal               @db.Decimal(18, 4)
  status         SubscriptionFeeStatus @default(DUE)
  dueDate        DateTime?
  paidAt         DateTime?
  createdAt      DateTime              @default(now())
  updatedAt      DateTime              @updatedAt

  account      Account       @relation(fields: [accountId], references: [id])
  journalEntry JournalEntry? @relation(fields: [journalEntryId], references: [id])

  isDeleted Boolean   @default(false) @map("is_deleted")
  deletedAt DateTime? @map("deleted_at")
  deletedBy String?   @map("deleted_by") @db.Uuid

  ownerId   String? @map("owner_id") @db.Uuid
  createdBy String? @map("created_by") @db.Uuid

  @@unique([accountId, periodStart])
  @@index([isDeleted], map: "subscription_fee_is_deleted_idx")
  @@index([status, periodStart])
  @@index([ownerId], map: "subscription_fee_owner_id_idx")
  @@index([createdBy], map: "subscription_fee_created_by_idx")
}

// ========================= LEDGER MODULE =========================

enum LedgerAccountType {
  ASSET
  LIABILITY
  EQUITY
  INCOME
  EXPENSE
}

enum LedgerAccountStatus {
  ACTIVE
  INACTIVE
}

enum JournalStatus {
  PENDING
  POSTED
  VOIDED
}

enum DebitCredit {
  DEBIT
  CREDIT
}

model LedgerAccount {
  id        String              @id @default(uuid()) @db.Uuid
  code      String              @unique @db.Text
  name      String              @db.Text
  nameFa    String?             @db.Text
  type      LedgerAccountType
  status    LedgerAccountStatus @default(ACTIVE)
  createdAt DateTime            @default(now())
  updatedAt DateTime            @updatedAt

  entries   JournalEntry[]
  isDeleted Boolean        @default(false) @map("is_deleted")
  deletedAt DateTime?      @map("deleted_at")
  deletedBy String?        @map("deleted_by") @db.Uuid

  @@index([isDeleted], map: "ledger_account_is_deleted_idx")
}

model Journal {
  id            String        @id @default(uuid()) @db.Uuid
  code          Int           @unique @default(autoincrement())
  transactionId String?       @db.Uuid
  note          String?       @db.Text
  status        JournalStatus @default(PENDING)
  postedAt      DateTime?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  entries     JournalEntry[]
  transaction Transaction?   @relation(fields: [transactionId], references: [id], onDelete: SetNull)

  isDeleted Boolean   @default(false) @map("is_deleted")
  deletedAt DateTime? @map("deleted_at")
  deletedBy String?   @map("deleted_by") @db.Uuid

  @@index([isDeleted], map: "journal_is_deleted_idx")
  @@index([status, postedAt], map: "journal_status_posted_at_idx")
  @@index([transactionId])
}

enum JournalTargetType {
  INSTALLMENT
  LOAN
  SUBSCRIPTION_FEE
  ACCOUNT
}

model JournalEntry {
  id              String             @id @default(uuid()) @db.Uuid
  code            Int                @unique @default(autoincrement())
  journalId       String             @db.Uuid
  ledgerAccountId String             @db.Uuid
  dc              DebitCredit
  amount          Decimal            @db.Decimal(18, 4)
  targetType      JournalTargetType?
  removable       Boolean            @default(false)
  targetId        String?            @db.Uuid
  createdAt       DateTime           @default(now())

  accountId String?  @db.Uuid
  account   Account? @relation(fields: [accountId], references: [id], onDelete: SetNull)

  journal          Journal           @relation(fields: [journalId], references: [id], onDelete: Cascade)
  ledgerAccount    LedgerAccount     @relation(fields: [ledgerAccountId], references: [id])
  installments     Installment[]
  subscriptionFees SubscriptionFee[]
  isDeleted        Boolean           @default(false) @map("is_deleted")
  deletedAt        DateTime?         @map("deleted_at")
  deletedBy        String?           @map("deleted_by") @db.Uuid

  @@index([isDeleted], map: "journal_entry_is_deleted_idx")
  @@index([journalId])
  @@index([ledgerAccountId])
  @@index([targetType, targetId])
  @@index([ledgerAccountId, createdAt])
  @@index([accountId, ledgerAccountId, dc])
}

// ========================= TRANSACTION MODULE =========================

enum TransactionStatus {
  PENDING
  APPROVED
  REJECTED
  ALLOCATED
}

enum TransactionKind {
  DEPOSIT
  WITHDRAWAL
  LOAN_DISBURSEMENT
  TRANSFER
}

model Transaction {
  id          String            @id @default(uuid()) @db.Uuid
  code        Int               @unique @default(autoincrement())
  kind        TransactionKind
  amount      Decimal           @db.Decimal(18, 4)
  status      TransactionStatus @default(PENDING)
  externalRef String?           @db.Text
  note        String?           @db.Text
  userId      String            @db.Uuid
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  // Relations
  user      User               @relation(fields: [userId], references: [id])
  images    TransactionImage[]
  journal   Journal[]
  isDeleted Boolean            @default(false) @map("is_deleted")
  deletedAt DateTime?          @map("deleted_at")
  deletedBy String?            @map("deleted_by") @db.Uuid

  ownerId   String? @map("owner_id") @db.Uuid
  createdBy String? @map("created_by") @db.Uuid

  @@index([isDeleted], map: "transaction_is_deleted_idx")
  @@index([ownerId], map: "transaction_owner_id_idx")
  @@index([createdBy], map: "transaction_created_by_idx")
}

model TransactionImage {
  id            String @id @default(uuid()) @db.Uuid
  transactionId String @db.Uuid
  fileId        String @db.Uuid

  description String?  @db.Text
  createdAt   DateTime @default(now())

  // Relations
  transaction Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)
  file        File        @relation(fields: [fileId], references: [id], onDelete: Cascade)

  isDeleted Boolean   @default(false) @map("is_deleted")
  deletedAt DateTime? @map("deleted_at")
  deletedBy String?   @map("deleted_by") @db.Uuid

  ownerId   String? @map("owner_id") @db.Uuid
  createdBy String? @map("created_by") @db.Uuid

  @@index([isDeleted], map: "transaction_image_is_deleted_idx")
  @@index([transactionId])
  @@index([fileId])
  @@index([ownerId], map: "transaction_image_owner_id_idx")
  @@index([createdBy], map: "transaction_image_created_by_idx")
}

// ========================= FILE MODULE =========================
model File {
  id        String   @id @default(uuid()) @db.Uuid
  code      Int      @unique @default(autoincrement())
  url       String   @db.Text
  mimeType  String   @db.Text
  size      Int
  createdAt DateTime @default(now())

  transactionImages TransactionImage[]
  isDeleted         Boolean            @default(false) @map("is_deleted")
  deletedAt         DateTime?          @map("deleted_at")
  deletedBy         String?            @map("deleted_by") @db.Uuid

  @@index([isDeleted], map: "file_is_deleted_idx")
}

// ========================= MESSAGING MODULE =========================

enum MessageType {
  SMS
  PUSH_NOTIFICATION
  EMAIL
}

enum MessageStatus {
  PENDING
  PROCESSING
  SENT
  FAILED
  SCHEDULED
  CANCELLED
}

enum RecipientStatus {
  PENDING
  SENT
  DELIVERED
  FAILED
  READ
}

model Message {
  id          String        @id @default(uuid()) @db.Uuid
  code        Int           @unique @default(autoincrement())
  type        MessageType
  status      MessageStatus @default(PENDING)
  subject     String?       @db.Text
  content     String        @db.Text
  templateId  String?       @map("template_id") @db.Uuid
  scheduledAt DateTime?     @map("scheduled_at")
  sentAt      DateTime?     @map("sent_at")
  metadata    Json?
  createdBy   String?       @map("created_by") @db.Uuid
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")

  // Relations
  template   MessageTemplate?   @relation(fields: [templateId], references: [id], onDelete: SetNull)
  recipients MessageRecipient[]

  isDeleted Boolean   @default(false) @map("is_deleted")
  deletedAt DateTime? @map("deleted_at")

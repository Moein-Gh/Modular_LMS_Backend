generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x", "windows"]
  output        = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid()) @db.Uuid
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  identity      Identity       @relation(fields: [identityId], references: [id])
  identityId    String         @unique @db.Uuid
  refreshTokens RefreshToken[]
  accounts      Account[]

  RoleAssignments RoleAssignment[]
  Transaction     Transaction[]
}

model Role {
  id          String  @id @default(uuid()) @db.Uuid
  key         String  @unique @db.Text
  name        String  @db.Text
  description String? @db.Text

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Back-relation: users assigned to this role via RoleAssignment
  RoleAssignments RoleAssignment[]

  @@map("role")
}

model Permission {
  id          String  @id @default(uuid()) @db.Uuid
  key         String  @unique @db.Text
  name        String  @db.Text
  description String? @db.Text

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("permission")
}

model RoleAssignment {
  id         String    @id @default(uuid()) @db.Uuid
  userId     String    @map("user_id") @db.Uuid
  roleId     String    @map("role_id") @db.Uuid
  assignedBy String?   @map("assigned_by")
  isActive   Boolean   @default(true) @map("is_active")
  expiresAt  DateTime? @map("expires_at")
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime  @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role Role @relation(fields: [roleId], references: [id], onDelete: Cascade)
}

model PermissionGrant {
  id           String    @id @default(uuid()) @db.Uuid
  granteeType  String // 'user' or 'role'
  granteeId    String // references User.id or Role.id (no FK constraint)
  permissionId String    @db.Uuid
  grantedBy    String?   @db.Uuid
  isGranted    Boolean   @default(true)
  reason       String?
  expiresAt    DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@map("permission_grant")
}

model Identity {
  id           String    @id @default(uuid()) @db.Uuid
  phone        String    @unique @db.Text
  email        String?   @unique @db.Text
  name         String?   @map("name") @db.Text
  countryCode  String?   @map("country_code") @db.Text
  nationalCode String?   @map("national_code") @db.Text
  lastLoginAt  DateTime? @map("last_login_at")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  user User?

  @@map("identity")
}

model RefreshToken {
  id                String    @id @default(uuid()) @db.Uuid
  userId            String    @map("user_id") @db.Uuid
  tokenHash         String    @map("token_hash") @db.Text
  revoked           Boolean   @default(false)
  expiresAt         DateTime  @map("expires_at")
  createdAt         DateTime  @default(now()) @map("created_at")
  revokedAt         DateTime? @map("revoked_at")
  replacedByTokenId String?   @map("replaced_by_token_id") @db.Uuid
  userAgent         String?   @map("user_agent") @db.Text
  ipAddress         String?   @map("ip_address") @db.Text

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, tokenHash], map: "refresh_token_user_hash_unique")
  @@index([userId], map: "refresh_token_user_idx")
  @@map("refresh_token")
}

model SmsCode {
  id          String    @id @default(uuid()) @db.Uuid
  phone       String    @db.Text
  code        String    @db.Text
  purpose     String    @db.Text
  attempts    Int       @default(0)
  maxAttempts Int       @default(5) @map("max_attempts")
  expiresAt   DateTime  @map("expires_at")
  consumedAt  DateTime? @map("consumed_at")
  createdAt   DateTime  @default(now()) @map("created_at")

  @@index([phone], map: "sms_code_phone_idx")
  @@index([phone, code], map: "sms_code_phone_code_idx")
  @@map("sms_code")
}

model AccountType {
  id          String    @id @default(uuid()) @db.Uuid
  name        String    @unique
  maxAccounts Int?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  accounts    Account[]
}

model Account {
  id            String      @id @default(uuid()) @db.Uuid
  accountTypeId String      @db.Uuid
  accountType   AccountType @relation(fields: [accountTypeId], references: [id])

  name   String
  userId String @db.Uuid
  user   User   @relation(fields: [userId], references: [id])

  cardNumber String @unique
  bankName   String
  status     String @default("active")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Back-relation: bank using this account
  bank            Bank?
  loans           Loan[]
  SubscriptionFee SubscriptionFee[]
}

/// Singleton bank configuration for the platform (exactly one row expected with id = 1)
model Bank {
  id                     String  @id @default(uuid()) @db.Uuid
  name                   String
  subscriptionFee        Decimal @db.Decimal(18, 4)
  commissionPercentage   Decimal @default(10) @db.Decimal(5, 2)
  defaultMaxInstallments Int     @default(10)

  installmentOptions Int[]  @default(dbgenerated("ARRAY[5,10,12]"))
  status             String @default("active")
  currency           String @default("Toman")
  timeZone           String @default("Asia/Tehran")

  accountId String?  @unique @db.Uuid
  account   Account? @relation(fields: [accountId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("bank")
}

model LoanType {
  id                   String  @id @default(uuid()) @db.Uuid
  name                 String  @unique
  commissionPercentage Decimal @db.Decimal(5, 2)
  defaultInstallments  Int     @default(10)
  maxInstallments      Int     @default(20)
  minInstallments      Int     @default(5)
  creditRequirementPct Decimal @db.Decimal(5, 2)
  description          String?

  loans Loan[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum LoanStatus {
  PENDING // created, awaiting approval
  APPROVED // approved but not yet disbursed
  ACTIVE // disbursed, being repaid
  CLOSED // fully repaid
  DEFAULTED // borrower failed to repay
}

model Loan {
  id   String @id @default(uuid()) @db.Uuid
  name String

  accountId String  @db.Uuid
  account   Account @relation(fields: [accountId], references: [id])

  loanTypeId String   @db.Uuid
  loanType   LoanType @relation(fields: [loanTypeId], references: [id])

  amount Decimal @db.Decimal(18, 4)

  startDate     DateTime
  paymentMonths Int
  status        LoanStatus @default(PENDING)

  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  installments Installment[]
}

enum InstallmentStatus {
  PENDING
  ACTIVE
  PAID
}

model Installment {
  id                String            @id @default(uuid()) @db.Uuid
  loanId            String            @db.Uuid
  amount            Decimal           @db.Decimal(18, 4)
  installmentNumber Int
  dueDate           DateTime
  status            InstallmentStatus @default(PENDING)
  paymentDate       DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  loan Loan @relation(fields: [loanId], references: [id])
}

enum SubscriptionFeeStatus {
  DUE
  PAID
  WAIVED
}

model SubscriptionFee {
  id           String                @id @default(uuid()) @db.Uuid
  accountId    String                @db.Uuid
  periodStart  DateTime
  amount       Decimal               @db.Decimal(18, 4)
  status       SubscriptionFeeStatus @default(DUE)
  dueDate      DateTime?
  paidAt       DateTime?
  waivedAt     DateTime?
  waiverReason String?               @db.Text
  createdAt    DateTime              @default(now())
  updatedAt    DateTime              @updatedAt

  account Account @relation(fields: [accountId], references: [id])

  @@unique([accountId, periodStart])
  @@index([status, periodStart])
}

// ========================= LEDGER MODULE =========================

enum LedgerAccountType {
  ASSET
  LIABILITY
  EQUITY
  INCOME
  EXPENSE
}

enum LedgerAccountStatus {
  ACTIVE
  INACTIVE
}

enum JournalStatus {
  PENDING
  POSTED
  VOIDED
}

enum DebitCredit {
  DEBIT
  CREDIT
}

model LedgerAccount {
  id        String              @id @default(uuid()) @db.Uuid
  code      String              @unique @db.Text
  name      String              @db.Text
  type      LedgerAccountType
  status    LedgerAccountStatus @default(ACTIVE)
  createdAt DateTime            @default(now())
  updatedAt DateTime            @updatedAt

  entries JournalEntry[]
}

model Journal {
  id            String        @id @default(uuid()) @db.Uuid
  transactionId String?       @db.Uuid
  note          String?       @db.Text
  status        JournalStatus @default(PENDING)
  postedAt      DateTime?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  entries     JournalEntry[]
  transaction Transaction?   @relation(fields: [transactionId], references: [id], onDelete: NoAction)

  @@index([transactionId])
}

enum JournalTargetType {
  INSTALLMENT
  LOAN
  SUBSCRIPTION_FEE
  ACCOUNT
  FEE
  COMMISSION
  ADJUSTMENT
  REFUND
  REVERSAL
}

model JournalEntry {
  id              String             @id @default(uuid()) @db.Uuid
  journalId       String             @db.Uuid
  ledgerAccountId String             @db.Uuid
  dc              DebitCredit
  amount          Decimal            @db.Decimal(18, 4)
  targetType      JournalTargetType?
  targetId        String?            @db.Uuid
  createdAt       DateTime           @default(now())

  journal       Journal       @relation(fields: [journalId], references: [id], onDelete: Cascade)
  ledgerAccount LedgerAccount @relation(fields: [ledgerAccountId], references: [id])

  @@index([journalId])
  @@index([ledgerAccountId])
  @@index([targetType, targetId])
  @@index([ledgerAccountId, createdAt])
}

// ========================= TRANSACTION MODULE =========================

enum TransactionStatus {
  PENDING
  APPROVED
  REJECTED
}

enum TransactionKind {
  DEPOSIT
  WITHDRAWAL
  LOAN_DISBURSEMENT
  LOAN_REPAYMENT
  SUBSCRIPTION_PAYMENT
  FEE
}

model Transaction {
  id          String            @id @default(uuid()) @db.Uuid
  kind        TransactionKind
  amount      Decimal           @db.Decimal(18, 4)
  status      TransactionStatus @default(PENDING)
  externalRef String?           @db.Text
  note        String?           @db.Text
  userId      String            @db.Uuid
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  // Relations
  user    User               @relation(fields: [userId], references: [id])
  images  TransactionImage[]
  journal Journal[]
}

model TransactionImage {
  id            String @id @default(uuid()) @db.Uuid
  transactionId String @db.Uuid
  fileId        String @db.Uuid

  description String?  @db.Text
  createdAt   DateTime @default(now())

  // Relations
  transaction Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)
  file        File        @relation(fields: [fileId], references: [id], onDelete: Cascade)

  @@index([transactionId])
  @@index([fileId])
}

// ========================= FILE MODULE =========================
model File {
  id        String   @id @default(uuid()) @db.Uuid
  url       String   @db.Text
  mimeType  String   @db.Text
  size      Int
  createdAt DateTime @default(now())

  transactionImages TransactionImage[]
}

{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@app/application": ["./libs/application/src"],
      "@app/application/*": ["./libs/application/src/*"],
      "@app/config": ["./libs/config/src"],
      "@app/config/*": ["./libs/config/src/*"],
      "@app/date": ["./libs/date/src"],
      "@app/date/*": ["./libs/date/src/*"],
      "@app/domain": ["./libs/domain/src"],
      "@app/domain/*": ["./libs/domain/src/*"],
      "@app/infra": ["./libs/infra/src"],
      "@app/infra/*": ["./libs/infra/src/*"],
      "@app/logger": ["./libs/logger/src"],
      "@app/logger/*": ["./libs/logger/src/*"],
      "@app/problem-details": ["./libs/problem-details/src"],
      "@app/problem-details/*": ["./libs/problem-details/src/*"],
      "@generated/*": ["./generated/*"]
    }
  },
  "include": ["apps/**/*", "libs/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"],
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority",
    "synchronousWatchDirectory": true,
    "excludeDirectories": ["**/node_modules", "_build"],
    "excludeFiles": ["build/fileWhichChangesOften.ts"]
  }
}

{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@app/application": [
        "libs/application/src"
      ],
      "@app/application/*": [
        "libs/application/src/*"
      ],
      "@app/config": [
        "libs/config/src"
      ],
      "@app/config/*": [
        "libs/config/src/*"
      ],
      "@app/domain": [
        "libs/domain/src"
      ],
      "@app/domain/*": [
        "libs/domain/src/*"
      ],
      "@app/infra": [
        "libs/infra/src"
      ],
      "@app/infra/*": [
        "libs/infra/src/*"
      ],
      "@app/problem-details": [
        "libs/problem-details/src"
      ],
      "@app/problem-details/*": [
        "libs/problem-details/src/*"
      ],
      "@generated/*": [
        "generated/*"
      ]
    }
  }
}
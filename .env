# Generic
NODE_ENV=development
API_BUILD_TARGET=dev

# Ports
USER_API_PORT=3100
ADMIN_API_PORT=3200
POSTGRES_PORT=5432

# Postgres
POSTGRES_DB=example_db
POSTGRES_USER=example_user
POSTGRES_PASSWORD=example_password

# Prisma - Use POSTGRES_HOST to switch between localhost and db
POSTGRES_HOST=localhost
DATABASE_URL=postgres://example_user:example_password@${POSTGRES_HOST}:5432/example_db

# Logging
LOG_LEVEL=info

# Environment
NODE_ENV=development

# Service Info
SERVICE_NAME=api-admin

# Request ID
REQUEST_ID_HEADER=x-request-id

# Sentry (optional)
SENTRY_TRACES_SAMPLE_RATE=0.05
SENTRY_DSN=SOME SENTRY DSN HERE
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=1.0.0

# --- Auth Module ---
JWT_SECRET=your_jwt_secret
SMS_API_KEY=your_sms_api_key
SMS_API_SECRET=your_sms_api_secret
SMS_SENDER_ID=your_sms_sender_id

# Token expiry times (in seconds)
ACCESS_TOKEN_EXPIRES_IN=900        # 15 minutes
REFRESH_TOKEN_EXPIRES_IN=2592000   # 30 days

# SMS expiry times (in seconds)
SMS_CODE_EXPIRES_IN=300            # 5 minutes
